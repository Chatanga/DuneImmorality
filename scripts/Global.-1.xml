<Panel position="0 -50" width="450" height="750" color="#000000" id="setupPane" rotation="0 0 0" outline="#2e200f" outlineSize="1"
	active="False" allowDragging="True" returnToOriginalPositionWhenReleased="False" _visibility="Host">
	<Defaults>
		<Text class="primary" color="#000000" fontSize="20" fontStyle="bold" alignment="MiddleLeft"/>
		<Text class="secondary" color="#000000" fontSize="14" fontStyle="bold" alignment="MiddleLeft"/>
		<Text class="epigraph" color="#1e170f" fontSize="14" fontStyle="italic" alignment="MiddleCenter"/>
		<Dropdown itemBackgroundColors="#2e200f44|#df9730|#ffffff|#361441" textColor="#2e200f" fontSize="12" itemTextColor="#2e200f" fontStyle="bold"/>
		<InputField colors="#00000000|#2e200f44|#2e200f" textColor="#2e200f" fontSize="14" fontStyle="bold"/>
		<Toggle colors="#9e907e|#ffd60b|#6d5e4c|#222222" textColor="#000000" fontSize="14" fontStyle="bold"/>
		<Button colors="#406f2e|#30281f|#df9730|#222222" textColor="#ffd60b" fontSize="14" outline="#30281f" outlineSize="3 3"/>
		<Image raycastTarget="true"/>
	</Defaults>
	<VerticalLayout>
		<Image ignoreLayout="True" image="http://cloud-3.steamusercontent.com/ugc/2178113508631611749/173703C80CC9894291106BFFF74C5D28619FE03F/"/>
		<VerticalLayout padding="40 40 150 50">
			<VerticalLayout padding="0 0 0 20">
				<Text class="epigraph" key="prolog"/>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="language"/>
				<Dropdown id="language" onValueChanged="Global/setLanguage">
					<Option></Option>
				</Dropdown>
			</HorizontalLayout>

			<Text class="primary" key="extensions"/>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="useContracts" onValueChanged="Global/setUseContracts" isOn="True" key="useContracts"/>
				<Toggle id="riseOfIx" isOn="True" onValueChanged="Global/setRiseOfIx" key="riseOfIx"/>
				<VerticalLayout padding="25 0 0 0">
					<Toggle id="epicMode" isOn="False" onValueChanged="Global/setEpicMode" key="epicMode"/>
				</VerticalLayout>
				<Toggle id="immortality" isOn="True" onValueChanged="Global/setImmortality" key="immortality"/>
				<VerticalLayout padding="25 0 0 0">
					<Toggle id="goTo11" isOn="False" onValueChanged="Global/setGoTo11" key="goTo11"/>
				</VerticalLayout>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="leaderSelection"/>
				<Dropdown id="leaderSelection" flexibleWidth="4" onValueChanged="Global/setLeaderSelection">
					<Option></Option>
				</Dropdown>
			</HorizontalLayout>
			<VerticalLayout padding="25 0 0 0">
				<HorizontalLayout>
					<Text class="secondary" id="defaultLeaderPoolSizeLabel"/>
					<Slider id="defaultLeaderPoolSize" flexibleWidth="2" onValueChanged="setDefaultLeaderPoolSize" wholeNumbers="True" minValue="6" maxValue="12" value="8" />
				</HorizontalLayout>
				<Toggle id="tweakLeaderSelection" onValueChanged="Global/setTweakLeaderSelection" isOn="False" key="tweakLeaderSelection"/>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="players"/>
			</HorizontalLayout>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="randomizePlayerPositions" onValueChanged="Global/setRandomizePlayerPositions" isOn="True" key="randomizePlayersPositions"/>
				<HorizontalLayout>
					<Toggle id="virtualHotSeat" onValueChanged="Global/setVirtualHotSeat" isOn="False" key="virtualHotSeat"/>
					<Dropdown id="virtualHotSeatMode" onValueChanged="Global/setVirtualHotSeatMode" flexibleWidth="2.5" active="False">
						<Option></Option>
					</Dropdown>
					<Dropdown id="difficulty" onValueChanged="Global/setDifficulty" flexibleWidth="3" active="False">
						<Option></Option>
					</Dropdown>
				</HorizontalLayout>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="miscellanous"/>
			</HorizontalLayout>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="horizontalHandLayout" onValueChanged="Global/setHorizontalHandLayout" isOn="True" key="horizontalHandLayout"/>
				<Toggle id="soundEnabled" onValueChanged="Global/setSoundEnabled" isOn="True" key="soundEnabled"/>
			</VerticalLayout>

		</VerticalLayout>
		<HorizontalLayout padding="100 100 0 20">
			<Button id="setUpButton" minHeight="26" onClick="Global/setUpFromUI" key="setup"/>
		</HorizontalLayout>
	</VerticalLayout>
	<Image position="0 375" width="450" height="230" image="http://cloud-3.steamusercontent.com/ugc/2178113508631057252/0DBB449E130AC23B875A07AE447E074C03B8926D/"/>
</Panel>
