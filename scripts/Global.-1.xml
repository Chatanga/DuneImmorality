<Panel position="0 -50" width="450" height="750" color="#000000" id="setupPane" rotation="0 0 0" outline="#2e200f" outlineSize="1"
	active="False" allowDragging="True" returnToOriginalPositionWhenReleased="False" visibility="Host">
	<Defaults>
		<Text class="primary" color="#30281f" fontSize="20" alignment="MiddleLeft" fontStyle="bold"/>
		<Text class="secondary" color="#721d00" alignment="MiddleRight"/>
		<Text class="epigraph" color="#1e170f" fontSize="12" fontStyle="italic" alignment="MiddleCenter"/>
		<Dropdown itemBackgroundColors="#2e200f44|#df9730|#ffffff|#361441" textColor="#2e200f" itemTextColor="#2e200f" fontStyle="bold"/>
		<InputField colors="#00000000|#2e200f44|#2e200f" textColor="#2e200f" fontStyle="bold"/>
		<Toggle colors="#9e907e|#ffd60b|#6d5e4c|#222222" textColor="#000000" fontStyle="bold"/>
		<Button colors="#2e200f|#30281f|#df9730|#222222" textColor="#ffd60b"  fontSize="16" outline="#30281f" outlineSize="3 3"/>
		<Image raycastTarget="true"/>
	</Defaults>
	<VerticalLayout>
		<Image ignoreLayout="True" image="http://cloud-3.steamusercontent.com/ugc/2178113508631611749/173703C80CC9894291106BFFF74C5D28619FE03F/"/>
		<VerticalLayout padding="40 40 150 50">
			<VerticalLayout padding="0 0 0 20">
				<Text class="epigraph" key="prolog"/>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="language"/>
				<Dropdown id="language" onValueChanged="Global/setLanguage">
					<Option></Option>
				</Dropdown>
			</HorizontalLayout>

			<Text class="primary" key="players"/>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="randomizePlayerPositions" onValueChanged="Global/setRandomizePlayerPositions" isOn="True" key="randomizePlayersPositions"/>
				<HorizontalLayout>
					<Toggle id="virtualHotSeat" onValueChanged="Global/setVirtualHotSeat" isOn="False" key="virtualHotSeat"/>
					<Dropdown id="numberOfPlayers" onValueChanged="Global/setNumberOfPlayers" flexibleWidth="2.5" active="False">
						<Option></Option>
					</Dropdown>
					<Dropdown id="difficulty" onValueChanged="Global/setDifficulty" flexibleWidth="3" active="False">
						<Option></Option>
					</Dropdown>
				</HorizontalLayout>
			</VerticalLayout>

			<Text class="primary" key="extensions"/>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="riseOfIx" isOn="True" onValueChanged="Global/setRiseOfIx" key="riseOfIx"/>
				<VerticalLayout padding="25 0 0 0">
					<Toggle id="epicMode" isOn="False" onValueChanged="Global/setEpicMode" key="epicMode"/>
				</VerticalLayout>
				<Toggle id="immortality" isOn="True" onValueChanged="Global/setImmortality" key="immortality"/>
				<VerticalLayout padding="25 0 0 0">
					<Toggle id="goTo11" isOn="False" onValueChanged="Global/setGoTo11" key="goTo11"/>
				</VerticalLayout>
			</VerticalLayout>

			<HorizontalLayout>
				<Text class="primary" key="leaderSelection"/>
				<Dropdown id="leaderSelection" flexibleWidth="4" onValueChanged="Global/setLeaderSelection">
					<Option></Option>
				</Dropdown>
			</HorizontalLayout>

			<HorizontalLayout>
				<Text class="primary" key="miscellanous"/>
			</HorizontalLayout>
			<VerticalLayout padding="25 0 0 0">
				<Toggle id="soundEnabled" onValueChanged="Global/setSoundEnabled" isOn="True" key="soundEnabled"/>
			</VerticalLayout>

		</VerticalLayout>
		<HorizontalLayout padding="100 100 0 20">
			<Button id="setUpButton" minHeight="26" onClick="Global/setUpFromUI" key="setup"/>
		</HorizontalLayout>
	</VerticalLayout>
	<!--Image position="0 375" width="256" height="256" image="http://cloud-3.steamusercontent.com/ugc/2178113508629772555/403477904A57FC9749C8B4F2C5548C5425D08A71/"/-->
	<Image position="0 375" width="450" height="230" image="http://cloud-3.steamusercontent.com/ugc/2178113508631057252/0DBB449E130AC23B875A07AE447E074C03B8926D/"/>
</Panel>
