	</Defaults>
	<VerticalLayout>
		<Image ignoreLayout="True" image="https://steamusercontent-a.akamaihd.net/ugc/2178113508631611749/173703C80CC9894291106BFFF74C5D28619FE03F/"/>
		<VerticalLayout padding="40 40 40 40">
			<!--VerticalLayout padding="0 0 0 20">
				<Text class="epigraph" key="prolog"/>
			</VerticalLayout-->

			<HorizontalLayout>
				<Text class="primary" key="language"/>
